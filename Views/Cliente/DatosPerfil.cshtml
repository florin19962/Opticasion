@model Opticasion.Models.Cliente
@{
    Layout = "~/Views/Shared/_PanelPerfilCliente.cshtml";
}
@{
    ViewData["Title"] = "Perfil";
}
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

@{
    Cliente _cliente;
    try
    {
        _cliente = JsonConvert.DeserializeObject<Cliente>(Context.Session.GetString("cliente"));
    }
    catch (Exception)
    {
        // ...no hay variable de sesion de cliente logueado...
        _cliente = null;
    }

}
<section class="container-fluid">
    <div class="row">
        @* ------------------------------------------------------------------------------------------------------SECCION DE DATOS PERSONALES-------------------------------------------------------------------------------------------- *@
        <div class="col-lg-12">
            <div class="caja-datosPanel">
                <div class="caja-header">
                    <h3 class="">Datos Personales</h3>
                </div>
                <hr />
                <form asp-action="UpdateDatosPersonales" asp-controller="Cliente" method="post">
                    <div class="container caja-body">
                        <div class="row mb-2">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="nombre">Nombre</label>
                                    <input value="@_cliente.Nombre" id="nombre" asp-for="@Model.Nombre" type="text" class="form-control" placeholder="Tu nombre" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="nickname">Nick</label>
                                    <input value="@_cliente.NickName" id="nickname" asp-for="@Model.NickName" type="text" class="form-control" placeholder="Tu nick" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="dni">DNI</label>
                                    <input value="@_cliente.DNI" id="dni" asp-for="@Model.DNI" type="text" class="form-control" placeholder="DNI" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="apellidos">Apellidos</label>
                                    <input value="@_cliente.Apellidos" id="apellidos" asp-for="@Model.Apellidos" type="text" class="form-control" placeholder="Tus apellidos" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="telefono">Telefono</label>
                                    <input value="@_cliente.Telefono" id="telefono" asp-for="@Model.Telefono" type="text" class="form-control" placeholder="tu telefono" />
                                </div>
                            </div>

                            <div class="caja-inferior-footer">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @* ------------------------------------------------------------------------------------------------------SECCION DE DATOS DE ACCESO--------------------------------------------------------------------------------------------- *@
        <div class="col-lg-12">
            <div class="caja-datosPanel">
                <div class="caja-header">
                    <h3 class="">Datos de Acceso</h3>
                </div>
                <hr />
                <form asp-action="UpdateDatosAcceso" asp-controller="Cliente" method="post">
                    <div class="container caja-body">
                        <div class="row mb-2">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="email">Correo de acceso</label>
                                    <input value="@_cliente.CredencialesAcceso.Email" required id="email" asp-for="@Model.CredencialesAcceso.Email" type="text" class="form-control" placeholder="Teclee la nueva cuenta de correo" />
                                </div>
                            </div>
                            @*<div class="col-lg-6">
                                <div class="form-group">
                                    <label for="password">Contraseña actual</label>
                                    <input value="@_cliente.CredencialesAcceso.HashPassword" disabled type="password" id="password" asp-for="@Model.CredencialesAcceso.HashPassword" class="form-control" placeholder="Contraseña actual" />
                                </div>
                            </div>*@
                            @*<div class="col-lg-6">
                                <div class="form-group">
                                    <label for="password">Nueva Contraseña </label>
                                    <input type="password" id="password" class="form-control" placeholder="Nueva Contraseña" />
                                </div>
                            </div>*@
                            <div class="caja-inferior-footer">
                                <button type="submit" class="btn btn-info">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @* ------------------------------------------------------------------------------------------------------SECCION DE DATOS DIRECCIONES------------------------------------------------------------------------------------------- *@
        <div class="col-lg-12">
            <div class="caja-datosPanel">
                <div class="caja-header">
                    <h3 class="">Direccion de Envio</h3>
                </div>
                <hr />
                <form asp-action="UpdateDatosDireccion" asp-controller="Cliente" method="post">
                    <div class="container caja-body">
                        <div class="row mb-2">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="inputAddress">Dirección de envio</label>
                                    <input type="text" asp-for="@Model.DireccionPrincipal.Calle" class="form-control" id="inputAddress" placeholder="C/Nombre Calle, Número, Piso-Letra">
                                    <div>
                                        <span asp-validation-for="@Model.DireccionPrincipal.Calle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="inputCP">Código Postal</label>
                                    <input type="text" asp-for="@Model.DireccionPrincipal.CP" class="form-control" id="inputCP" placeholder="28080">
                                    <div>
                                        <span asp-validation-for="@Model.DireccionPrincipal.CP" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="inputProvincia">Provincia</label>
                                    <select id="inputProvincia" asp-for="@_cliente.DireccionPrincipal.Provincia" class="form-control">
                                        @foreach (Provincia unaprov in (ViewData["listaProvincias"] as List<Provincia>))
                                        {
                                            <option value="@unaprov.CodPro">@unaprov.NombreProvincia</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="inputMunicipio">Localidad</label>
                                    <select id="inputMunicipio" asp-for="@_cliente.DireccionPrincipal.Localidad" class="form-control">
                                        @foreach (Municipio unmun in (ViewData["listaMunicipios"] as List<Municipio>))
                                        {
                                            <option value="@unmun.CodMun">@unmun.NombreMunicipio</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="caja-inferior-footer">
                                <button type="submit" class="btn btn-success">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>
