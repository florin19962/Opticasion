@* Script limitar fecha minima a la del dia que se cree la cita no pudiendo elegir anteriores dias *@
<script>
    let hoy = new Date();
    let dd = hoy.getDate();
    let mm = hoy.getMonth() + 1; //Enero es 1!
    let yyyy = hoy.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }
    hoy = yyyy + '-' + mm + '-' + dd;
    let fecha = document.getElementById("fecha");

    //fechadesde.max = ;
    fecha.min = hoy;
</script>